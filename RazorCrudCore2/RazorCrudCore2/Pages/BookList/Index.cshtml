@page
@model RazorCrudCore2.Pages.BookList.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h2>Hello From Razor Crud!</h2>

<h4>Book List:</h4>

@if(Model.Message != null)
{
    <div class=" alert alert-info alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Message
    </div>

}

<a asp-page="Create" class="btn btn-primary">New Book</a>
<br /><br />
<form method="post">
    @if (Model.Books.Count() > 0)
    {
        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Id)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Author)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Books.FirstOrDefault().ISBN)
                </th>
            </tr>
            @foreach(var item in Model.Books)
            {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(m => item.ISBN)
                </td>
                <td>
                    <!-- Delete by Id -->
                    <button asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</button>
                    <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Edit</a>
                </td>
            </tr>
    
            }
    
        </table>
    
    }
    else
    {
        <div>No Books in Database</div>
    }
</form>
